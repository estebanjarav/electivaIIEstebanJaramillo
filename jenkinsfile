pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        MONGO_URL = 'mongodb://root:example@mongodb:27017/auth-service?authSource=admin'
    }

    stages {
        stage('Clonar Repositorio') {
            steps {
                git branch: 'master', 
                    url: 'https://github.com/estebanjarav/electivaIIEstebanJaramillo.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    if (fileExists('docker-compose.yml')) {
                        echo 'Success Build: docker-compose.yml found'
                    } else {
                        error 'Build Failed: docker-compose.yml not found'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    if (fileExists('jest.config.js')) {
                        echo 'Success Build: jest.config.js found'
                    } else {
                        error 'Test Failed: jest.config.js not found'
                    }
                }
            }
        }

    
    }

    post {
        success {
            echo 'Pipeline ejecutado con éxito!'
        }
        failure {
            echo 'Pipeline falló.'
        }
    }
}
