pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        AWS_REGION            = 'us-east-1'
        MONGO_URL = 'mongodb://root:example@mongodb:27017/auth-service?authSource=admin'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', 
                    url: 'https://github.com/estebanjarav/electivaIIEstebanJaramillo.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    if (fileExists('docker-compose.yml')) {
                        echo 'Success Build: docker-compose.yml exist'
                    } else {
                        error 'Build Failed: docker-compose.yml dont exist'
                    }
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    if (fileExists('jest.config.js')) {
                        echo 'Success Build: jest.config.js exist'
                    } else {
                        error 'Test Failed: jest.config.js dont exist'
                    }
                }
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Approval') {
            steps {
                script {
                    input message: 'Continue with terraform Apply?', ok: 'Yes, apply changes'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }

    post {
        success {
            echo 'Success Pipeline!'
        }
        failure {
            echo 'Fall Pipeline!'
        }
    }
}
